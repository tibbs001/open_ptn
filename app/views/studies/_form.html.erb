
<%=  stylesheet_link_tag "studies/studies" %>
<%= form_for(@study) do |f| %>
  <% if @study.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@study.errors.count, "error") %> prohibited this study info from being saved:</h2>

      <ul>
      <% @study.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="well form-group">
    <p>* Title
    <%= f.text_field :title, autofocus: true, :minlength=> 4, class: "enter-info form-control", placeholder: 'study title (with acronym)', :required => true %>
    </p>
  </div>

  <div class="well form-group">
    <p>* Title
    <%= f.text_field :nct_id, autofocus: true, :minlength=> 9, class: "enter-info form-control", placeholder: 'ClinicalTrials.gov NCT ID', :required => true %>
    </p>
  </div>

  <div class="form-group">
    <p>* Brief Summary
      <%= f.text_field :brief_summary, placeholder: 'brief summary of the study', class: "enter-info form-control", :required => true %>
    </p>
  </div>

  <div class="form-group">
    <p>* Submitted by
      <%= f.text_field :submitter_name, :size=>'20', :minlength=> 4, placeholder: 'name of person depositing data', class: "enter-info form-control", :required => true %>
    </p>
  </div>

  <div class="form-group">
    <p>* Email
      <%= f.text_field :email, :size=>'20', placeholder: 'email address we can use to contact you to confirm this information (this will not display publicly)', :maxlength=>"254", class: "enter-info form-control", :required => true %>
    </p>
  </div>

  <div class="form-group">
    <p>Public Contact Info
      <%= f.text_field :contact_info, placeholder: "contact info to support secondary use of this info", class: "enter-info form-control" %>
    </p>
  </div>

  <div class="form-group">
    <p>URL
    <%= f.text_field :url, :size=>'100', placeholder: 'url link to a related website', class: "enter-info form-control" %></p>
  </div>

  <div class="form-group">
    <p>Details
      <%= f.text_area :detailed_description, cols: '40', rows: '10', placeholder: "all the details you consider worth sharing", class: 'enter-info form-control' %>
    </p>
  </div>

  <p class='enter-label form-group'>Attachment:
    <%= f.file_field :file, class: 'enter-info form-control' %>
  </p>

  <p class='enter-label form-group'>Image:
    <%= f.file_field :image_file, class: 'enter-info form-control' %>
  </p>

  <br>
  <p>By pressing this button, you agree to share this information with the research community; your information will be published to the PTN Public Repository.</p>
  <div class="button actions">
    <p><%= f.submit %></p>
  </div>

<% end %>
